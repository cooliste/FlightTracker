<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:backgroundTint="@color/white"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:elevation="5dp"

            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/fm1"
                    android:backgroundTint="#166199"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AK780   Air France "
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:fontFamily="serif"

                            android:layout_weight="7"
                            android:id="@+id/flight"
                            android:textColor="@color/white"/>
                        <TextView
                            android:drawableStart="@drawable/lite"
                            android:drawablePadding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scheduled"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:fontFamily="serif"

                            android:id="@+id/state"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:outlineAmbientShadowColor="@color/black"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14 Oct 2022"
                                android:fontFamily="serif"

                                android:textColor="@color/black"
                                android:orientation="vertical"
                                android:id="@+id/departure_date"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Accra"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="serif"


                                android:id="@+id/departure_city"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ACC"
                                android:textStyle="bold"
                                android:textSize="40dp"
                                android:fontFamily="serif"

                                android:id="@+id/departure_airport"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5:50 PM"
                                android:textSize="20dp"
                                android:fontFamily="serif"
                                android:textColor="@color/black"
                                android:id="@+id/departure_time"
                                android:textStyle="bold"

                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/avion2"
                                android:layout_marginVertical="5dp"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 Oct 2022"
                                android:textColor="@color/black"
                                android:fontFamily="serif"

                                android:id="@+id/arrival_date"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="right"

                                android:layout_marginEnd="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dubai"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="serif"

                                android:id="@+id/arrival_city"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="right"

                                android:layout_marginEnd="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DBX"
                                android:id="@+id/arrival_airport"
                                android:textStyle="bold"
                                android:textSize="40dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:layout_marginTop="2dp"
                                android:fontFamily="serif"

                                android:layout_marginRight="5dp"
                                android:layout_gravity="right"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8:50 AM"
                                android:id="@+id/arrival_time"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="serif"

                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_gravity="right"
                                />

                        </LinearLayout>

                    </LinearLayout>


                </FrameLayout>




            </androidx.appcompat.widget.LinearLayoutCompat>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="175dp"
                android:background="@drawable/fm2"
                android:backgroundTint="#166199"
                tools:ignore="MissingConstraints" />

        </FrameLayout>



    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>